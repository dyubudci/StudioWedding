<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/line"
    android:orientation="vertical"
    android:scrollbars="none"
    tools:context=".view.activity.contract.UpdateContractActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="53dp"
            android:layout_marginBottom="8dp"
            android:orientation="horizontal">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbarUpdateContract"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/imgBackFromUpdateContract"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_back" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/inter_bold"
                    android:text="@string/title_update_contract"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </androidx.appcompat.widget.Toolbar>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="113dp"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal"
                        android:paddingLeft="19dp"
                        android:paddingTop="11dp"
                        android:paddingRight="20dp"
                        android:paddingBottom="11dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:drawableLeft="@drawable/detail_contract_id"
                                android:drawablePadding="14dp"
                                android:gravity="center_vertical|start"
                                android:text="Thông tin cơ bản"
                                android:textColor="@color/black"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="7dp"
                                android:text="Tiền cọc"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tvDepositUpdateContract"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:drawableLeft="@drawable/contract_deposit"
                                android:drawablePadding="14dp"
                                android:ellipsize="end"
                                android:paddingTop="7dp"
                                android:text="Tiền cọc"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tvIdHDUpdateContract"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:drawablePadding="14dp"
                                android:ellipsize="end"
                                android:gravity="center|left"
                                android:text="Mã hợp đồng"
                                android:textAlignment="textEnd"
                                android:textColor="@color/blue_g"
                                android:textSize="15sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="7dp"
                                android:text="Ngày tạo"
                                android:textAlignment="textEnd"
                                android:textSize="13sp" />

                            <TextView
                                android:id="@+id/tvDatecreateUpdateContract"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:drawableRight="@drawable/contract_date_created"
                                android:drawablePadding="14dp"
                                android:ellipsize="end"
                                android:paddingTop="7dp"
                                android:text="Ngày tạo"
                                android:textAlignment="textEnd"
                                android:textColor="#000000"
                                android:textSize="15sp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="13dp"
                android:text="Thông tin khách hàng"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="15dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:paddingLeft="19dp"
                        android:paddingTop="11dp"
                        android:paddingBottom="11dp">

                        <TextView
                            android:id="@+id/tvNameClientUpdateContract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:text="Tên KH"
                            android:textColor="#000000"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tvPhoneNumberUpdateContract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:paddingTop="7dp"
                            android:text="Điện thoại"
                            android:textColor="#000000"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tvAddressUpdateContract"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:maxLines="6"
                            android:paddingTop="7dp"
                            android:text="Địa chỉ"
                            android:textColor="#000000"
                            android:textSize="15sp" />
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="13dp"
                    android:hint="Ngày tạo"
                    android:text="Chi tiết hợp đồng"
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcvDetailContractInUpdateContract"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:listitem="@layout/layout_item_detail_contract"
                    tools:itemCount="3"/>

            </LinearLayout>

            <EditText
                android:id="@+id/edUpdateDOPContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:clickable="true"
                android:drawableLeft="@drawable/contract_dop"
                android:drawablePadding="14dp"
                android:ems="10"
                android:focusable="false"
                android:hint="Ngày thanh toán"
                android:inputType="text"
                android:padding="13dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edUpdateDiscountContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:drawableLeft="@drawable/contract_incurred_fine"
                android:drawablePadding="14dp"
                android:ems="10"
                android:hint="Giảm giá"
                android:inputType="text"
                android:padding="13dp"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edUpdateTotalAmmountContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:drawableLeft="@drawable/contract_total_amount"
                android:drawablePadding="14dp"
                android:ems="10"
                android:enabled="false"
                android:hint="Tổng tiền"
                android:inputType="text"
                android:padding="13dp"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edUpdatePaymentStatusContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:clickable="true"
                android:drawableLeft="@drawable/spinner_select"
                android:drawableRight="@drawable/spinner_arrow_down"
                android:drawablePadding="14dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:padding="13dp"
                android:text="Trạng thái hợp đồng"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edUpdateIncurrentStatusContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:clickable="true"
                android:drawableLeft="@drawable/spinner_select"
                android:drawableRight="@drawable/spinner_arrow_down"
                android:drawablePadding="14dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:padding="13dp"
                android:text="Trạng thái phát sinh"
                android:textColor="#000000"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/edUpdateIncurrentNoteContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:clickable="true"
                android:drawableLeft="@drawable/spinner_select"
                android:drawableRight="@drawable/spinner_arrow_down"
                android:drawablePadding="8dp"
                android:ems="10"
                android:focusable="false"
                android:inputType="text"
                android:padding="13dp"
                android:text="Nội dung"
                android:textSize="14dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edUpdateIncurrentFineContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:drawableLeft="@drawable/contract_total_amount"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Phí phát sinh "
                android:inputType="text"
                android:padding="13dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/edUpdateIncurrentDorContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="8dp"
                android:background="@drawable/edittext_bgr_white"
                android:drawableLeft="@drawable/contract_total_amount"
                android:drawablePadding="8dp"
                android:ems="10"
                android:hint="Ngày trả lần 2 "
                android:inputType="date"
                android:padding="13dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnUpdateContract"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/button_bgr_primary"
                android:text="Cập nhật"
                android:textColor="@color/white"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>


</androidx.core.widget.NestedScrollView>